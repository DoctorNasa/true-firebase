<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.roongrojphetkheaw.qzy.RegisterForm"
    tools:showIn="@layout/activity_register_form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:text="Your Basic Info"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilFirstName"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"

            >

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLastName"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tilFirstName"

            >

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spnrCountries"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tilLastName" />

        <Spinner
            android:id="@+id/spnrGender"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/spnrCountries" />
        <!--<android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/tilLastName"
            android:layout_margin="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/tilCountry"
            >
            <EditText
                android:id="@+id/etCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Country"
                android:inputType="textPersonName"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>-->


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilBio"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/spnrGender"

            >

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Biography"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilInterests"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tilBio"

            >

            <EditText
                android:id="@+id/etIntrests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Interests"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhone"
            style="@style/spinner_style"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tilInterests"

            >

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Phone No."
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSaveProf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilPhone"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="20dp"

            android:text="Save"
            android:textColor="#ffffff" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
